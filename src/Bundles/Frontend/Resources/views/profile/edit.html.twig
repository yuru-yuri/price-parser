{% extends "frontend.html.twig" %}

{% block title %}Edit profile{% endblock %}
{% block body %}
    <div id="main-wrapper">
        <div class="unix-login">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-4">
                        <div class="login-content card">
                            <div class="login-form">
                                <h4 style="margin-bottom: 20px;">Edit profile</h4>
                                {{ form_start(form) }}
                                {{ form_widget(form) }}
                                <div class="">
                                    <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Sign Up</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                            {% if user.getAvatar() %}
                            <img src="{{ user.getAvatar() | imagine_filter('avatar') }}" class="user-image" alt="User Image">
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
