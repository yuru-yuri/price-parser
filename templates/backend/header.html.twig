{% block header %}
<header class="main-header">

    <!-- Logo -->
    <a href="{{ path('index_backend') }}" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><img src="/favicon/android-icon-48x48.png"></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg">PriceParser</span>
    </a>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="{{ profile.getAvatar() | imagine_filter('small') }}" class="user-image" alt="User Image">
                        <span class="hidden-xs">{{ profile.getUsername() }}</span>
                    </a>

                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="{{ profile.getAvatar() | imagine_filter('small') }}" class="img-circle" alt="User Image">

                            <p>
                                {{ profile.getName() }} {{ profile.getLastName() }}
                            </p>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-right">
                                <a href="{{ path('logout') }}" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>

    </nav>
</header>
{% endblock %}
